# CELUE高频套利系统环境配置
# 该文件定义了所有可配置参数，消除代码中的硬编码

# ================================
# 跨交易所套利配置
# ================================
# 每腿滑点百分比 (建议: 0.001-0.005)
CELUE_INTER_EXCHANGE_SLIPPAGE=0.002

# 最小流动性要求 USD (建议: 10000-100000)
CELUE_MIN_LIQUIDITY_USD=25000.0

# 默认手续费 bps (建议: 10-30)
CELUE_DEFAULT_FEE_BPS=15.0

# 最大交易规模 USD (建议: 50000-500000)
CELUE_MAX_TRADE_SIZE_USD=100000.0

# ================================
# 三角套利配置
# ================================
# 是否启用三角套利 (true/false)
CELUE_TRIANGULAR_ENABLED=true

# 最大路径数量 (建议: 10-100)
CELUE_MAX_TRIANGULAR_PATHS=50

# 缓存TTL秒数 (建议: 60-600)
CELUE_CACHE_TTL_SECONDS=300

# ================================
# 风险控制配置
# ================================
# 每日最大亏损 USD (建议: 5000-50000)
CELUE_MAX_DAILY_LOSS_USD=20000.0

# 单次最大亏损百分比 (建议: 0.005-0.02)
CELUE_MAX_SINGLE_LOSS_PCT=0.015

# 最大连续失败次数 (建议: 3-10)
CELUE_MAX_CONSECUTIVE_FAILURES=5

# 错误率阈值百分比 (建议: 0.05-0.2)
CELUE_ERROR_RATE_THRESHOLD=0.08

# 延迟阈值毫秒 (建议: 500-2000)
CELUE_LATENCY_THRESHOLD_MS=1000

# ================================
# 最小利润配置
# ================================
# 基础利润 bps (建议: 50-200)
CELUE_BASE_PROFIT_BPS=75

# 市场状态权重 - 普通
CELUE_MARKET_WEIGHT_REGULAR=1.0

# 市场状态权重 - 谨慎 (建议: 1.2-2.0)
CELUE_MARKET_WEIGHT_CAUTIOUS=1.5

# 市场状态权重 - 极端 (建议: 2.0-4.0)
CELUE_MARKET_WEIGHT_EXTREME=2.8

# ================================
# 策略上下文配置
# ================================
# 上下文跨交易所滑点
CELUE_CONTEXT_INTER_EXCHANGE_SLIPPAGE=0.0015

# 上下文最小流动性
CELUE_CONTEXT_MIN_LIQUIDITY_USD=30000.0

# ================================
# 市场状态权重 (备用)
# ================================
CELUE_MARKET_STATE_WEIGHT_REGULAR=1.0
CELUE_MARKET_STATE_WEIGHT_CAUTIOUS=1.6
CELUE_MARKET_STATE_WEIGHT_EXTREME=2.8

# ================================
# 模拟执行配置
# ================================
# 基础延迟毫秒 (建议: 50-200)
CELUE_SIMULATION_BASE_DELAY_MS=80

# 延迟方差毫秒 (建议: 20-100)
CELUE_SIMULATION_DELAY_VARIANCE_MS=40

# 模拟成功率 (建议: 0.85-0.99)
CELUE_SIMULATION_SUCCESS_RATE=0.92

# ================================
# 安全后备配置
# ================================
# 后备最小利润 bps (最保守值)
CELUE_FALLBACK_MIN_PROFIT_BPS=120

# 后备市场权重 - 普通
CELUE_FALLBACK_WEIGHT_REGULAR=1.0

# 后备市场权重 - 谨慎
CELUE_FALLBACK_WEIGHT_CAUTIOUS=2.0

# 后备市场权重 - 极端
CELUE_FALLBACK_WEIGHT_EXTREME=3.5

# ================================
# 日志和监控配置
# ================================
# 日志级别 (trace/debug/info/warn/error)
RUST_LOG=info

# 是否启用性能监控
CELUE_ENABLE_PERFORMANCE_MONITORING=true

# 监控报告间隔秒数
CELUE_MONITORING_INTERVAL_SECONDS=30 
